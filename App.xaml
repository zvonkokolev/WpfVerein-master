<Application x:Class="WpfVerein.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfVerein"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="allButtons" TargetType="Button">
            <Setter Property="Margin" Value="20,10,20,10" />
            <Setter Property="Width" Value="100" />
            <Setter Property="FontSize" Value="20" />
        </Style>

        <Style x:Key="heading" TargetType="TextBlock">
            <Setter Property="ItemsControl.FontFamily" Value="Times New Roman" />
            <Setter Property="ItemsControl.FontSize" Value="20" />
            <Setter Property="Margin" Value="10,10,0,10" />
            <Setter Property="Foreground" Value="Brown" />
        </Style>

        <Style x:Key="mouseOverItem" TargetType="TextBlock">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Beige" />
                    <Setter Property="FontSize" Value="14" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
